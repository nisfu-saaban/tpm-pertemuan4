<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blockHeader"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/icoBack"
            android:src="@drawable/back"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/inpSearch"
            android:layout_toRightOf="@id/icoBack"
            android:hint="Cari Apel Malang"
            android:background="@drawable/edittext_border_abuabu"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="6dp"
            android:padding="10dp"
            android:textSize="14dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/lineHeader"
        android:layout_below="@id/blockHeader"
        android:layout_marginTop="2dp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lineHeader">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blockKatalogProduk"
                android:orientation="vertical"
                android:paddingTop="20dp">


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>