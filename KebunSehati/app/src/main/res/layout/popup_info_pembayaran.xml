<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@android:color/white"
        android:layout_marginTop="180dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/icoClose"
            android:src="@drawable/close"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTitleInfoPembayaran"
            android:layout_toRightOf="@id/icoClose"
            android:layout_marginLeft="20dp"
            android:text="Info Pembayaran"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtMetode"
            android:layout_below="@id/txtTitleInfoPembayaran"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTujuan"
            android:layout_below="@id/txtMetode"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtTotal"
            android:layout_below="@id/txtTujuan"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnKonfirmasi"
            android:layout_below="@id/txtTotal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:text="Konfirmasi Pembayaran"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</RelativeLayout>