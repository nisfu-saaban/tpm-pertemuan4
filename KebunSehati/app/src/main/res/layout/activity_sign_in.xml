<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blockLogo"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/logo"
            android:src="@drawable/splash"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtWelcome"
        android:layout_below="@id/blockLogo"
        android:textSize="18dp"
        android:text="Selamat Datang"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnterPhoneNumber"
        android:layout_below="@id/txtWelcome"
        android:layout_marginTop="3dp"
        android:text="Silahkan isikan nomor handphone anda untuk melanjutkan."
        android:textSize="14dp"
        android:layout_marginLeft="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blockPhoneNumber"
        android:layout_below="@id/txtEnterPhoneNumber"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp">

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/inpKodeNegara"
            android:padding="10dp"
            android:text="+62"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/inpNoTelp"
            android:padding="10dp"
            android:hint="812765xxx"
            android:textSize="20dp"
            android:layout_toRightOf="@id/inpKodeNegara"
            android:layout_marginLeft="10dp"
            android:inputType="phone"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLanjutkan"
            android:layout_below="@id/inpNoTelp"
            android:text="Lanjutkan"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

    </RelativeLayout>

</RelativeLayout>